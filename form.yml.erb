<%-
  cmd = "source /etc/profile.d/hpc_software.sh; ls $HPC_SOFTWARE/schrodinger/"
  begin
    output, status = Open3.capture2e(cmd)
    if status.success?
      schrodinger_versions = output.split("\n").map(&:strip).reject(&:blank?).reverse
    else
      raise output
    end
  rescue => e
    schrodinger_versions = []
    error = e.message.strip
  end
-%>
---
cluster: "pomona"
# cacheable: false
attributes:
  desktop: "xfce"
  bc_vnc_idle: 0
  bc_vnc_resolution:
    required: true
  pom_partitions:
    label: "Partitions"
    help: |
      - **amd** - Default partition, you can run up to 720 hours (30 days) per job
      - **gpu** - GPU partition, you can run up to 720 hours (30 days) per job
      - **short** - Limit to 2 hours, job will start with little to no wait time
    widget: select
    options:
      - [
          'amd', 'amd',
          data-hide-pom-num-gpus: true,
          data-max-pom-num-hours: 720
        ]
      - [
          'gpu', 'gpu',
          data-max-pom-num-hours: 720,
          data-max-pom-num-cores: 32,
          data-max-pom-num-memories: 125
        ]
      - [
          'short', 'short',
          data-hide-pom-num-gpus: true,
          data-max-pom-num-hours: 2
        ]
  pom_schrodinger_versions:
    label: "Schrodinger Version"
    required: true
    widget: select
    options:
    <%- schrodinger_versions.each do |q| -%>
      - [ "<%= q %>", "<%= q %>" ]
    <%- end -%>
  pom_num_hours:
    widget: "number_field"
    label: "Number of hours"
    help: |
      - **short** - max of 2 hours
    value: 1
    min: 1
    max: 720
    required: true
  pom_num_gpus:
    label: "Number of GPUs"
    widget: "number_field"
    value: 0
    max: "1"
    min: "0"
  pom_num_cores:
    widget: "number_field"
    label: "Number of CPU cores to request"
    help: |
      CPU cores are in multiple of 2 to optimize performance
    value: 2
    max: 128
    min: 2
    step: 2
    required: true
  pom_num_memories:
    widget: "number_field"
    label: "Memory in G to request"
    value: 4
    max: 500
    min: 4
form:
  - pom_partitions
  - pom_schrodinger_versions
  - pom_num_hours
  - pom_num_gpus
  - pom_num_cores
  - pom_num_memories
  - bc_vnc_idle
  - desktop
  - bc_vnc_resolution
  - bc_email_on_started
